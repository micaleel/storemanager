@model DialogueStore.Web.Models.Movement

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">Movement</div>
        <div class="panel-body">
            <table class="table table-condensed table-hover">
                <tr>
                    <td>@Html.DisplayNameFor(f => f.DateCreated)</td>
                    <td>@Html.DisplayFor(f => f.DateCreated)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(f => f.FromLocation.Name)</td>
                    <td>@Html.DisplayFor(f => f.FromLocation.Name)</td>
                </tr>
                   <tr>
                    <td>@Html.DisplayNameFor(f => f.ToLocation.Name)</td>
                    <td>@Html.DisplayFor(f => f.ToLocation.Name)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(f => f.Notes)</td>
                    <td>@Html.DisplayFor(f => f.Notes)</td>
                </tr>
            </table>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <input type="submit" value="Delete" />
                </div>
            }
        </div>
    </div>
</div>


@model DialogueStore.Web.Models.User

@{
    ViewBag.Title = string.Format("User Profile for {0} ({1}) ", Model.DisplayName, Model.UserName);
}

<div class="container" style="margin-top: 30px">
    <div class="col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Model.DisplayName (@Model.UserName)</h3>
            </div>
            <div class="panel-body">

                <dl class="dl-horizontal">
                    <dt>UserName</dt>
                    <dd>@Model.UserName</dd>

                    <dt>Full Name</dt>
                    <dd>@Model.DisplayName</dd>

                    <dt>Role</dt>
                    <dd>@Model.Role</dd>

                    <dt>Account Locked?</dt>
                    <dd>@(Model.Locked ? "Yes" : "No")</dd>

                    <dt>Last Login Date</dt>
                    <dd>@Model.LastLogin</dd>

                    <dt>Email Address</dt>
                    <dd>@(string.IsNullOrWhiteSpace(Model.Email) ? "(Not Specified)" : Model.Email)</dd>

                    <dt>Phone Number</dt>
                    <dd>@(string.IsNullOrWhiteSpace(Model.Phone) ? "(Not Specified)" : Model.Phone)</dd>

                </dl>

            </div>

        </div>

    </div>
</div>
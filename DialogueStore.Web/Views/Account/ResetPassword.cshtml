@model DialogueStore.Web.ViewModels.ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
}
<div class="container">
    <h2>Reset Password</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Reset Password</legend>
            <div class="form-group">
                @Html.LabelFor(f => f.UserName)
                <div>
                    @Html.EditorFor(f => f.UserName)
                    @Html.ValidationMessageFor(f => f.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(f => f.Question)
                <div>
                    @Html.EditorFor(f => f.Question)
                    @Html.ValidationMessageFor(f => f.Question)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(f => f.Answer)
                <div>
                    @Html.EditorFor(f => f.Answer)
                    @Html.ValidationMessageFor(f => f.Answer)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(f => f.Password)
                <div>
                    @Html.EditorFor(f => f.Password)
                    @Html.ValidationMessageFor(f => f.Password)
                </div>
            </div>
            <div>
                <input type="submit" value="Save" class="btn btn-default btn-primary" />
            </div>
        </fieldset>
    }
</div>

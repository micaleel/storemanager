@model IEnumerable<DialogueStore.Web.Models.TimelineActivity>
@{
    ViewBag.Title = "Dashboard";
}

<div class="container">
    <div class="row">
        <h2 class="page-header">Dashboard</h2>
    </div>

    <div class="row">
        <div class="well well-sm" style="padding: 3px">
            <form action="@Url.Action("Search", "Home")">
                <div class="input-group">
                    <input type="text" class="form-control" name="q" id="q" placeholder="Find test result" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i>&nbsp;SEARCH</button>
                    </span>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            
            <div class="well well-sm">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Activity Stream</h3>
                    </div>
                    <div class="panel-body">
                        @foreach (var item in Model)
                        {
                            @ViewHelpers.EchoTimelineActivity(Url, item)
                        }
                    </div>
                </div>
            </div>
     
        }
        else
        {
            <div class="col-md-4 col-md-offset-4">
                <p class="alert alert-info text-center">
                    There are no user activities to display
                </p>
            </div>
        }
    </div>
</div>

@model DialogueStore.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Forgot Passowrd";
}
<div class="container">
    <div class="row">
        <h2 class="page-header">Forgot Password</h2>
    </div>

    <div class="row">
        <p>Please enter your username to recover your password.</p>

        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")

            <div class="form-group">
                @Html.LabelFor(f => f.UserName)
                <div >
                    @Html.TextBoxFor(f => f.UserName)
                </div>
            </div>
            
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Recover Password</button>
            </div>
            
        }
    </div>

</div>

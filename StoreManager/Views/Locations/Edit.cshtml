@model StoreManager.Models.Location

@{
    ViewBag.Title = "Edit Location";
}


<div class="container">

    <div class="row">
        <h2 class="page-header">@Model.Name <small>Location Details</small></h2>
    </div>

    <div class="row">
        <ul class="nav nav-pills">
            <li><a href="@Url.Action("Index")">All Locations</a></li>
            <li><a href="@Url.Action("Create")">Create New</a></li>
            <li class="active"><a href="@Url.Action("Details", new { id = Model.Id })">Details</a></li>
            <li><a href="@Url.Action("Edit", new { id = Model.Id })">Edit</a></li>
        </ul>
    </div>

    <p>&nbsp;</p>

    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">Edit Location <small>@Model.Name</small></h2>
                    </div>

                    <div class="panel-body">
                        @Html.HiddenFor(f => f.Id)

                        <div class="form-group">
                            @Html.LabelFor(f => f.Name)
                            <div>
                                @Html.EditorFor(f => f.Name)
                                @Html.ValidationMessageFor(f => f.Name)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(f => f.IsStore)
                            <div>
                                @Html.EditorFor(f => f.IsStore)
                                @Html.ValidationMessageFor(f => f.IsStore)
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

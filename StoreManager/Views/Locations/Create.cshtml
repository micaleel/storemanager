@model StoreManager.Models.Location

@{
    ViewBag.Title = "Create Location";
}

<div class="container">
    <div class="row">
        <h2 class="page-header">Create Location</h2>
    </div>

    <div class="row">
        <ul class="nav nav-pills">
            <li><a href="@Url.Action("Index")">All Locations</a></li>
            <li class="active"><a href="@Url.Action("Create")">Create New</a></li>
        </ul>
    </div>

    <p>&nbsp;</p>

    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Location Details</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(f => f.Name)
                            <div>
                                @Html.EditorFor(f => f.Name)
                                @Html.ValidationMessageFor(f => f.Name)
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create Location" class="btn btn-default btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@model StoreManager.Models.StockCondition

@{
    ViewBag.Title = "Edit Stock Condition";
}

<div class="container">

    <div class="row">
        <h2 class="page-header">Edit Stock Condition <small>Settings</small></h2>
    </div>

    <div class="row">
        <ul class="nav nav-pills">
            <li><a href="@Url.Action("Index")">List</a></li>
            <li><a href="@Url.Action("Create")">Create New</a></li>
            <li class="active"><a href="@Url.Action("Edit", new { id = Model.Id })">Edit</a></li>
        </ul>
    </div>

    <p>&nbsp;</p>

    <div class="row">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="panel">
                <div class="panel-heading">
                    <h3>Stock Condition Details</h3>
                </div>

                <div class="panel-body">
                    @Html.HiddenFor(f => f.Id)

                    <div class="form-group">
                        @Html.LabelFor(f => f.Name)
                        <div>
                            @Html.EditorFor(f => f.Name)
                            @Html.ValidationMessageFor(f => f.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

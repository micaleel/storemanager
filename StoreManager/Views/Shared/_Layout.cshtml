<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.0.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style type="text/css">
        html {
            font-size: 100.01%;
            -webkit-text-size-adjust: 100%;
            -ms-text-size-adjust: 100%;
        }

        html, body {
            height: 100%;
        }

        body {
            background: #f9f9f9;
            font-size: 10pt;
            color: #5a5a5a /* #333  #444 */;
            position: relative;
            padding-bottom: 40px;
            font-family: 'Segoe UI', 'Open Sans', Tahoma, Arial, sans-serif;
        }

        jumbotron {
            position: relative;
            padding: 30px 0;
            color: #fff;
            text-align: center;
            text-shadow: 0 1px 3px rgba(0,0,0,.4), 0 0 30px rgba(0,0,0,.075);
            background: #0a5100; /* Old browsers */
            background: -moz-linear-gradient(top, #0a5100 0%, #45a03e 100%); /* FF3.6+ */
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#0a5100), color-stop(100%,#45a03e)); /* Chrome,Safari4+ */
            background: -webkit-linear-gradient(top, #0a5100 0%,#45a03e 100%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, #0a5100 0%,#45a03e 100%); /* Opera 11.10+ */
            background: -ms-linear-gradient(top, #0a5100 0%,#45a03e 100%); /* IE10+ */
            background: linear-gradient(to bottom, #0a5100 0%,#45a03e 100%); /* W3C */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#0a5100', endColorstr='#45a03e',GradientType=0 ); /* IE6-9 */
            -webkit-box-shadow: inset 0 3px 7px rgba(0,0,0,.2), inset 0 -3px 7px rgba(0,0,0,.2);
            -moz-box-shadow: inset 0 3px 7px rgba(0,0,0,.2), inset 0 -3px 7px rgba(0,0,0,.2);
            box-shadow: inset 0 3px 7px rgba(0,0,0,.2), inset 0 -3px 7px rgba(0,0,0,.2);
        }

        .jumbotron .btn {
            font-size: 21px;
            padding: 14px 24px;
        }

        .jumbotron h1 {
            font-family: 'Open Sans', Calibri, 'Trebuchet MS', Arial, sans-serif;
            font-weight: bold;
            letter-spacing: -1px;
            line-height: 1;
        }

        .jumbotron .container {
            position: relative;
            z-index: 2;
        }

        .jumbotron:after {
            content: '';
            display: block;
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: url(bs-docs-masthead-pattern.png) repeat center center;
            -moz-opacity: .4;
            opacity: .4;
        }

        .jumbotron p {
            font-weight: 300;
            line-height: 1.25;
            margin-bottom: 30px;
        }

        form .control-group label {
            font-size: 10pt;
        }

        input[type=text] {
            font-size: 10pt;
        }

        #ui-datepicker-div {
            font-size: 10pt;
        }

        .ui-datepicker .ui-datepicker-title select {
            font-size: 10pt;
            height: auto;
            padding: 3px;
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: lighter;
            font-family: 'Segoe UI', 'Open Sans', Tahoma, Arial, sans-serif;
        }

        div.contentbox {
            border: 1px solid #ccc;
            margin-bottom: 20px;
            padding: 0 30px 30px 30px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
            border-radius: 5px;
            background: #fff;
            -moz-box-shadow: 0 0 10px #eee;
            -webkit-box-shadow: 0 0 10px #eee;
            box-shadow: 0 0 10px #eee;
            font-size: 14px;
            line-height: 1.6;
            color: #333;
        }

        .text-shadow {
            -webkit-text-shadow: 0 1px 0 white;
            text-shadow: 0 1px 0 white;
        }

        /* Faded out hr */
        hr.soften {
            height: 1px;
            margin: 54px 0;
            background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
            background-image: -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
            background-image: -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
            background-image: -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
            border: 0;
        }

        th.numeric, td.numeric {
            text-align: right;
        }

        .text-align-right {
            text-align: right;
        }


        /* Styles for validation helpers
-----------------------------------------------------------*/
        .field-validation-error {
            color: #f00;
            font-family: 'Segoe UI', 'Open Sans', Tahoma, Arial, sans-serif;
            font-size: 10pt;
        }

        .field-validation-valid {
            display: none;
        }

        .input-validation-error {
            border: 1px solid #f00;
            background-color: #fee;
        }

        .validation-summary-errors {
            font-weight: bold;
            color: #f00;
        }

        .validation-summary-valid {
            display: none;
        }

        .table td {
            vertical-align: middle;
        }

        .table-bordered th {
            background: #E9E9E9;
            background: -moz-linear-gradient(top, #FAFAFA 0%, #E9E9E9 100%); /* FF3.6+ */
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FAFAFA), color-stop(100%,#E9E9E9)); /* Chrome,Safari4+ */
            background: -webkit-linear-gradient(top, #FAFAFA 0%,#E9E9E9 100%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, #FAFAFA 0%,#E9E9E9 100%); /* Opera11.10+ */
            background: -ms-linear-gradient(top, #FAFAFA 0%,#E9E9E9 100%); /* IE10+ */
            background: linear-gradient(top, #FAFAFA 0%,#E9E9E9 100%); /* W3C */
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#FAFAFA', endColorstr='#E9E9E9');
            -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#FAFAFA', endColorstr='#E9E9E9')";
            font-size: 10px;
            color: #444;
            text-transform: uppercase;
        }

        .widget {
            position: relative;
            clear: both;
            width: auto;
            margin-bottom: 2em;
            overflow: hidden;
        }

        .widget-header {
            position: relative;
            height: 40px;
            line-height: 40px;
            background: #E9E9E9;
            background: -moz-linear-gradient(top, #FAFAFA 0%, #E9E9E9 100%); /* FF3.6+ */
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FAFAFA), color-stop(100%,#E9E9E9)); /* Chrome,Safari4+ */
            background: -webkit-linear-gradient(top, #FAFAFA 0%,#E9E9E9 100%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, #FAFAFA 0%,#E9E9E9 100%); /* Opera11.10+ */
            background: -ms-linear-gradient(top, #FAFAFA 0%,#E9E9E9 100%); /* IE10+ */
            background: linear-gradient(top, #FAFAFA 0%,#E9E9E9 100%); /* W3C */
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#FAFAFA', endColorstr='#E9E9E9');
            -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#FAFAFA', endColorstr='#E9E9E9')";
            border: 1px solid #D5D5D5;
            -webkit-border-top-left-radius: 4px;
            -webkit-border-top-right-radius: 4px;
            -moz-border-radius-topleft: 4px;
            -moz-border-radius-topright: 4px;
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
            -webkit-background-clip: padding-box;
        }

            .widget-header h3 {
                position: relative;
                top: 2px;
                left: 10px;
                display: inline-block;
                margin-right: 3em;
                font-size: 14px;
                font-weight: 800;
                color: #555;
                line-height: 18px;
                text-shadow: 1px 1px 2px rgba(255,255,255,.5);
            }

            .widget-header [class^="icon-"], .widget-header [class*=" icon-"] {
                display: inline-block;
                margin-left: 13px;
                margin-right: -2px;
                font-size: 16px;
                color: #555;
                vertical-align: middle;
            }

        .widget-content {
            padding: 20px 15px 15px;
            background: #FFF;
            border: 1px solid #D5D5D5;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
            border-radius: 5px;
        }

        .widget-header + .widget-content {
            border-top: none;
            -webkit-border-top-left-radius: 0;
            -webkit-border-top-right-radius: 0;
            -moz-border-radius-topleft: 0;
            -moz-border-radius-topright: 0;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        .widget-nopad .widget-content {
            padding: 0;
        }

        /* Widget Content Clearfix */
        .widget-content:before,
        .widget-content:after {
            content: "";
            display: table;
        }

        .widget-content:after {
            clear: both;
        }

        /* For IE 6/7 (trigger hasLayout) */
        .widget-content {
            zoom: 1;
        }

        /* Widget Table */

        .widget-table .widget-content {
            padding: 0;
        }

        .widget-table .table {
            margin-bottom: 0;
            border: none;
        }

            .widget-table .table tr td:first-child {
                border-left: none;
            }

            .widget-table .table tr th:first-child {
                border-left: none;
            }


        /* Widget Plain */

        .widget-plain {
            background: transparent;
            border: none;
        }

            .widget-plain .widget-content {
                padding: 0;
                background: transparent;
                border: none;
            }


        /* Widget Box */

        .widget-box {
        }

            .widget-box .widget-content {
                background: #E3E3E3;
                background: #FFF;
            }


        .standard-thead thead th, .standard-thead thead td {
            padding: 7px 0 7px 7px;
            text-align: left;
            font-size: 11pt;
            border: 1px solid #ccc;
        }

        .standard-thead thead tr {
            border-bottom: 1px solid #ccc;
            background: #eee;
            background: #f9f9f9;
            background: -moz-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            background: -webkit-gradient(linear,left top,left bottom,color-stop(1%,#f9f9f9),color-stop(100%,#f0f0f0));
            background: -webkit-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            background: -o-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            background: -ms-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            background: linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
        }

        .standard-thead thead th:first-child, .standard-thead thead td:first-child {
            text-align: left;
        }

        table.table {
            border-collapse: collapse;
            border-spacing: 0;
            font-size: 100%;
            width: 100%;
            margin-bottom: 10px;
        }

            table.table thead th, table.table thead td {
                padding: 7px 0 7px 7px;
                text-align: left;
                font-size: 11pt;
                border: 1px solid #ccc !important;
            }

            table.table thead th, table.table thead th {
                padding: 7px 0 7px 7px;
                text-align: left;
                font-size: 11pt;
                border: 1px solid #ccc !important;
                font-weight: normal;
            }

            table.table thead tr {
                border-bottom: 1px solid #ccc;
                background: #eee;
                background: #f9f9f9;
                background: -moz-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
                background: -webkit-gradient(linear,left top,left bottom,color-stop(1%,#f9f9f9),color-stop(100%,#f0f0f0));
                background: -webkit-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
                background: -o-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
                background: -ms-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
                background: linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            }

            table.table thead th:first-child, table.table thead td:first-child {
                text-align: left;
            }

            table.table tbody td {
                padding: 7px 0 7px 7px;
                border: none;
                margin: 0;
                vertical-align: top;
                border: 1px solid #ccc;
            }

                table.table tbody td p {
                    margin: 0;
                    padding: 0;
                }

                table.table tbody td span.title {
                    font-weight: bold;
                }

                    table.table tbody td span.title dfn {
                        font-weight: bold;
                        font-size: 12pt;
                    }

                table.table tbody td.numeric {
                    text-align: right;
                    padding-right: 10px;
                }

                table.table tbody td.date {
                    text-align: right;
                    padding-right: 10px;
                }

                table.table tbody td.firstcolumn {
                    padding-right: 10px;
                }

            table.table tbody tr {
                background-color: #fff;
            }

            table.table tbody ul {
                margin-top: 10px;
                margin-bottom: 5px;
                color: #666;
            }

                table.table tbody ul li {
                    list-style-type: none;
                    margin: 0;
                    line-height: 20px;
                }

            table.table tbody td.sort-indicator {
                color: #666;
            }

            table.table th.select, table.table td.select {
                text-align: center;
                padding-left: 0;
                width: 24px;
            }

            table.table td.center {
                text-align: center;
            }

            table.table td.right {
                text-align: right;
            }

            table.table td.actions {
                text-align: center;
            }

                table.table td.actions a {
                    margin-right: 7px;
                }

            table.table tr:nth-child(even) {
                background-color: #fcfcfc;
            }

            table.table tr.hover {
                background-color: #f5f9ff;
            }

        .sort-enabled tr.hover td.sort-indicator {
            background-color: #e0f1ff;
        }

        table.bordered, table.bordered th, table.bordered td {
            border: 1px solid #ccc;
        }

        table.datagrid thead th, table.datagrid thead td {
            padding: 7px 0 7px 7px;
            text-align: left;
            font-size: 11pt;
            border: 1px solid #ccc;
        }

        table.datagrid thead tr {
            border-bottom: 1px solid #ccc;
            background: #eee;
            background: #f9f9f9;
            background: -moz-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            background: -webkit-gradient(linear,left top,left bottom,color-stop(1%,#f9f9f9),color-stop(100%,#f0f0f0));
            background: -webkit-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            background: -o-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            background: -ms-linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
            background: linear-gradient(top,#f9f9f9 1%,#f0f0f0 100%);
        }

        table.datagrid thead th:first-child, table.datagrid thead td:first-child {
            text-align: left;
        }

        table.datagrid thead tr th {
            border: 1px solid #ccc;
        }

        table.datagrid tbody tr td {
            padding: 0;
            margin: 0;
            vertical-align: middle;
            border: 1px solid #ccc;
            height: 20px;
        }

            table.datagrid tbody tr td .in1 {
                margin-left: 0;
            }

            table.datagrid tbody tr td .in2 {
                margin-right: 12px;
            }

            table.datagrid tbody tr td input, table.datagrid tbody tr td input[type="text"], table.datagrid tbody tr td input[type="password"], table.datagrid tbody tr td textarea {
                margin: 0;
                padding: 4px;
                border: 1px solid #fff;
                font-size: 9pt;
                background: #fff;
                line-height: 20px;
                margin: 0;
                width: 100%;
                box-shadow: none;
                -webkit-box-shadow: none;
                border-radius: 0;
                padding-left: 6px;
            }

                table.datagrid tbody tr td input.input-validation-error {
                    background-color: #ffe0eb;
                    border: 1px solid red;
                }

                table.datagrid tbody tr td input:focus, table.datagrid tbody tr td input[type="text"]:focus, table.datagrid tbody tr td input[type="password"]:focus, table.datagrid tbody tr td textarea:focus {
                    border: 1px solid #ffa500;
                }

            table.datagrid tbody tr td select {
                border: 1px solid #fff;
                font-size: 9pt;
                background: #fff;
                line-height: 20px;
                margin: 0;
                width: 100%;
            }

                table.datagrid tbody tr td select:focus {
                    border: 1px solid #ffa500;
                }

            table.datagrid tbody tr td.actions {
                padding-left: 7px;
            }

        table.datagrid tbody tr.deleted td input {
            text-decoration: line-through;
            color: #999;
        }

        table.datagrid tbody tr.deleted td select {
            text-decoration: line-through;
            color: #999;
        }

        table.tablesorter thead tr .header {
            background-repeat: no-repeat;
            background-position: center right;
            cursor: pointer;
        }

        table.tablesorter thead tr .headerSortUp {
            background-image: url(Images/Tables/asc.gif);
            background-repeat: no-repeat;
            background-position: center right;
        }

        table.tablesorter thead tr .headerSortDown {
            background-image: url(Images/Tables/desc.gif);
            background-repeat: no-repeat;
            background-position: center right;
        }

        table.details tbody tr td {
            border: 0;
            padding: 5px;
            font-size: 10pt;
        }

            table.details tbody tr td:first-child {
                color: #555;
                padding-right: 15px;
            }


        .form-widget .widget-content {
            padding: 30px 0 0;
        }

        .form-widget .form-actions {
            margin-bottom: 0;
        }

        .form-widget form {
            margin-bottom: 0;
        }

        .form-widget .validation-summary-errors {
            margin-left: 1.5em;
            margin-right: 1.5em;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="navbar-inner">
            <a class="brand" href="#">Store Manager</a>
            <ul class="nav">
                <li class="active"><a href="@Url.Action("Index", "Items")">Items</a></li>
                <li><a href="@Url.Action("Index", "ItemStatuses")">Item Statuses</a></li>
                <li><a href="@Url.Action("Index", "Locations")">Locations</a></li>
                <li><a href="@Url.Action("Index", "Movements")">Movements</a></li>
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>

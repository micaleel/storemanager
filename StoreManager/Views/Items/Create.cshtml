@model StoreManager.Models.Item

@{
    ViewBag.Title = "Create Stock Item";
}

<div class="container">

    <div class="row">
        <h2 class="page-header">Create New Stock Item</h2>
    </div>

    <div class="row">
        <ul class="nav nav-pills">
            <li><a href="@Url.Action("Index", "Items")">All Items</a></li>
            <li class="active"><a href="@Url.Action("Create", "Items")">Create New</a></li>
        </ul>
    </div>
    
    <p>&nbsp;</p>

    <form method="POST" action="@Url.Action("Create")" >
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Item Information</legend>

            @Html.Partial("_CreateOrEdit")

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </fieldset>
    </form>

    <div>
    </div>
</div>

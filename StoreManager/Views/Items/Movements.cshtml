@using StoreManager.Models
@model IEnumerable<Movement>

@{
    ViewBag.Title = "Item Movements";
}

@functions {

    static string GetStockName(IEnumerable<Movement> movements) {
        return movements.First().Stock.Item.Name;
    }

}
<div class="container">
    <h2 class="page-header">Item Movements @if (Model.Any()) {@GetStockName(Model)}<small>@Model.Count() entries</small>
    </h2>

    <table class="table  table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(f => f.DateCreated)</th>
                <th>@Html.DisplayNameFor(f => f.FromLocation)</th>
                <th>@Html.DisplayNameFor(f => f.ToLocation)</th>
                <th>@Html.DisplayNameFor(f => f.Notes)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @item.DateCreated.FormatDate() <small>@item.DateCreated.FriendlyDate()</small>
                    </td>
                    <td><a href="@Url.Action("Details", "Locations", new { id = item.FromLocationId })">@Html.DisplayFor(_ => item.FromLocation.Name)</a></td>
                    <td><a href="@Url.Action("Details", "Locations", new { id = item.ToLocationId })">@Html.DisplayFor(_ => item.ToLocation.Name)</a></td>
                    <td>@Html.DisplayFor(_ => item.Notes)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Details", "Details", new { id = item.Id }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

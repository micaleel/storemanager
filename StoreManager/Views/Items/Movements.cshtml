@using StoreManager.Models
@model IEnumerable<Movement>

@{
    ViewBag.Title = "Item Movements";
}

@functions {

    static string GetStockName(IEnumerable<Movement> movements) {
        return movements.First().Stock.Item.Name;
    }

}
<div class="container">
    <h2 class="page-header">Item Movements @if (Model.Any()) {@GetStockName(Model)}<small>@Model.Count() entries</small>
    </h2>

    <table class="table  table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(f => f.DateCreated)
            </th>
            <th>Destination Location
            </th>
            <th>
                @Html.DisplayNameFor(f => f.Notes)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.DateCreated.FormatDate() <small>@item.DateCreated.FriendlyDate()</small>
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Notes)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

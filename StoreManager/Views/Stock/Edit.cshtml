@model StoreManager.Models.Stock

@{
    ViewBag.Title = "Adjust Stock Item";
}

<div class="container">

    <div class="row">
        <h2 class="page-header">Adjust Stock Item <small>@Model.Item.Name</small></h2>
    </div>

    <div class="row">
        <ul class="nav nav-pills">
            <li><a href="@Url.Action("Index", "Items")">All Items</a></li>
            <li class="active"><a href="@Url.Action("Create", "Items")">Create New</a></li>
        </ul>
    </div>

    <p>&nbsp;</p>

    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm()) {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(f => f.ItemId)
                <div class="panel">
                    <div class="panel-heading">
                        <h3>Stock Information</h3>
                    </div>
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.LabelFor(f => f.StockConditionId)
                            <div>
                                @Html.DropDownList("StockConditionId", String.Empty)
                                @Html.ValidationMessageFor(f => f.StockConditionId)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(f => f.PurchaseDate)
                            <div>
                                @Html.EditorFor(f => f.PurchaseDate)
                                @Html.ValidationMessageFor(f => f.PurchaseDate)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(f => f.BatchPrice)
                            <div>
                                @Html.EditorFor(f => f.BatchPrice)
                                @Html.ValidationMessageFor(f => f.BatchPrice)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(f => f.UnitPrice)
                            <div>
                                @Html.EditorFor(f => f.UnitPrice)
                                @Html.ValidationMessageFor(f => f.UnitPrice)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(f => f.ExpiryDate)
                            <div>
                                @Html.EditorFor(f => f.ExpiryDate)
                                @Html.ValidationMessageFor(f => f.ExpiryDate)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(f => f.Notes)
                            <div>
                                @Html.TextAreaFor(f => f.Notes)
                                @Html.ValidationMessageFor(f => f.Notes)
                            </div>
                        </div>

                        @if (Model.IsParent) {
                            <div class="form-group">
                                @Html.LabelFor(f => f.Notes)
                                <div>
                                    @Html.CheckBox("updateBatch")
                                    @Html.ValidationMessageFor(f => f.Notes)
                                </div>
                            </div>
                        }

                        <div class="form-group">
                            <input type="submit" value="Adjust Stock" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@model StoreManager.Models.Stock

@{
    ViewBag.Title = "Delete Stock";
}

<div class="container">

    <div class="row">
        <h2 class="page-header">Delete Stock</h2>
    </div>

    <div class="row">
        <p class="lead">Are you sure you want to delete this?</p>
    </div>

    <div class="row">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Stock Details</h3>
            </div>

            <div class="panel-body">

                <table class="table">
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.IsExpired)</td>
                        <td>@Html.DisplayFor(model => model.IsExpired)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.ExpiryDate)</td>
                        <td>@Html.DisplayFor(model => model.ExpiryDate)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.PurchaseDate)</td>
                        <td>@Html.DisplayFor(model => model.PurchaseDate)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.BatchPrice)</td>
                        <td>@Html.DisplayFor(model => model.BatchPrice)</td>
                    </tr>
                      <tr>
                        <td>@Html.DisplayNameFor(model => model.UnitPrice)</td>
                        <td>@Html.DisplayFor(model => model.UnitPrice)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Notes)</td>
                        <td>@Html.DisplayFor(model => model.Notes)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.DateAdded)</td>
                        <td>@Html.DisplayFor(model => model.DateAdded)</td>
                    </tr>
                </table>

            </div>
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                
                if (Model.IsParent) {
                <div class="form-group">
                    @Html.CheckBox("batchUpdate", false)
                    @Html.Label("Delete all batch items related to this stock")
                </div>
                }
                
                <div class="form-group">
                    <input type="submit" value="Delete Stock" class="btn btn-default btn-danger" />
                </div>
            }
        </div>
    </div>
</div>

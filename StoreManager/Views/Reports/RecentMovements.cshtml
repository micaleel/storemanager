@using StoreManager.Models
@model IEnumerable<StoreManager.Models.Movement>

@{
    ViewBag.Title = "Recent Movements";
}

<div class="container">
    <h2 class="page-header">Recent Movements</h2>

    <table class="table  table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(f => f.Date)</th>
                <th>
                    Item
                </th>
                <th>
                    Location
                </th>
                <th>@Html.DisplayNameFor(f => f.Notes)</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Date.FormatDate()</td>
                <td>@Html.DisplayFor(_ => item.Item.Name)</td>
                <td>@Html.DisplayFor(_ => item.Location.Name)</td>
                <td>@Html.DisplayFor(_ => item.Notes)</td>
                <td></td>
            </tr>
        }

    </table>
</div>
